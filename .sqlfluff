[sqlfluff]
dialect = mysql
templater = raw
max_line_length = 100
encoding = utf-8

# Exclude files that SQLFluff can't parse (comma-separated, no line breaks)
ignore = knowledge_base/archived/**,lib/rebuild.sql,lib/schema/tables/logs.sql

# Disable overly strict rules for MySQL projects
exclude_rules = RF04

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]  
capitalisation_policy = lower

